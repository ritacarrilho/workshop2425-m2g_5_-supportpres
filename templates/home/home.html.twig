{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin-bottom: 80px; margin-top: 80px; text-align: center">
        <h1>Bienvenue</h1>
    </div>
    <div style="margin-bottom: 20%">
        <h2 style="margin-left: 20%; margin-bottom: 2%;">Ventes Ã  venir</h2>
        <div class="uk-container">
            <div class="uk-grid uk-child-width-1-3@m uk-text-center" uk-grid>
                {% set sortedVentes = ventes|sort((a, b) => a.dateVente.timestamp - b.dateVente.timestamp) %}
                {% for vente in sortedVentes %}
                    {% if vente.dateVente|date('Y-m-d') >= "now"|date("Y-m-d") %}
                        <a href="{{ path('app_ventes_route', {'id': vente.id}) }}" class="uk-link-reset">
                            <div class="uk-margin-remove-vertical">
                                <div class="uk-card uk-card-default uk-card-body uk-position-relative" style="margin-bottom: 5%">
                                    <img src="{{ vente.imageVente }}" />
                                    <h3 class="uk-card-title">{{ vente.nom }}</h3>
                                    <p>{{ vente.description }}</p>
                                    <p>
                                        <i class="fas fa-clock"></i>
                                        {{ vente.dateVente | date('d/m/y') }}
                                    </p>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}