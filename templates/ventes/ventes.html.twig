{% extends 'base.html.twig' %}

{% block body %}

    <div class="uk-container" style="margin-top: 3%">
        <a href="javascript:history.back()" style="color: #333333">
            <i class="fas fa-arrow-left fa-2x"></i>
        </a>
    </div>

    <div style="margin-bottom: 45px; margin-top: 30px; text-align: center">
        <h3>Vente N° {{ app.request.get('id') }}</h3>
        <h1>{{ vente.nom }}</h1>
        <h4>{{ lieuVente.libelle }}</h4>
        {% if vente.dateVente|date('Y-m-d') < "now"|date("Y-m-d") %}
            <span class="uk-text-bold" style="color: red;">Vente fermée</span>
        {% endif %}
    </div>

    <!-- Afficher infos vente -->
    <div style="margin-bottom: 5%">
        <div class="uk-container">
            <table class="uk-table uk-table-divider uk-table-small" style="margin-top: 5%">
                    <thead>
                    <tr class="uk-text-bold">
                        <th>Date début vente</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ vente.dateVente |date("d/m/Y")}} </td>
                    </tr>
                    </tbody>
                </table>
        </div>
    </div>

    <!-- Afficher les lots -->
    <div class="uk-container">
        <div class="uk-grid uk-child-width-1-3@m uk-text-center" uk-grid>
            {% for lot in lots %}
                <a href="{{ path('app_lot_route', {'idVente': vente.id, 'idLot': lot.id}) }}" style="margin-bottom: 15%" class="uk-link-reset">
                    <div class="uk-card uk-card-default uk-card-hover">
                        <div class="uk-card-header">
                            <h3 class="uk-card-title">Lot N°{{ lot.id }}</h3>
                            {% for categorieLot in categorieLots %}
                                {% if categorieLot.id == lot.idCategorieLot.id %}
                                    <p class="uk-text-bold">{{ categorieLot.libelle }}</p>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="uk-card-body">
                            {% for cheval in chevaux %}
                                {% if cheval.id == lot.idCheval.id %}
                                    <img src="{{ cheval.image }}" alt="Cheval" style="width: 100%; height: auto;">
                                {% endif %}
                            {% endfor %}
                            <p>Prix de départ : <span style="font-weight: bold">{{ lot.prixDepart }}</span> €</p>
                           <!-- <p>{{ lieuVente.libelle }}</p>-->
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}