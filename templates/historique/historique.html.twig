{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin-bottom: 80px; margin-top: 80px; text-align: center">
        <h1>Historique</h1>
    </div>

    <div style="margin-bottom: 20%">
        <h2 style="margin-left: 20%; margin-bottom: 2%;">Ventes passÃ©es</h2>
        <div class="uk-container">
            <div class="uk-grid uk-child-width-1-3@m uk-text-center" uk-grid>
                {% set sortedVentes = ventes|sort((a, b) => b.dateVente.timestamp - a.dateVente.timestamp) %}
                {% for vente in sortedVentes %}
                    {% if vente.dateVente|date('Y-m-d') < "now"|date("Y-m-d") %}
                        <a href="{{ path('app_ventes_route', {'id': vente.id}) }}" class="uk-link-reset">
                            <div class="uk-margin-remove-vertical">
                                <div class="uk-card uk-card-default uk-card-body" style="margin-bottom: 5%">
                                    <div class="uk-grid uk-grid-small uk-flex uk-flex-left">
                                        <div class="uk-width-auto@m">
                                            <img src="{{ vente.imageVente }}" alt="{{ vente.nom }}" style="width: 100%; height: auto;">
                                        </div>
                                        <div class="uk-width-expand@m">
                                            <h3 class="uk-card-title" style="margin-top: 5%;">{{ vente.nom }}</h3>
                                            <p>{{ vente.description }}</p>
                                            <p>
                                                <i class="fas fa-clock"></i>
                                                {{ vente.dateVente | date('d/m/y') }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}