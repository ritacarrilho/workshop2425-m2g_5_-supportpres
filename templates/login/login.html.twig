{% include 'header/header.html.twig' %}

<div style="background: linear-gradient(#ffefff, #d5ffd5);">
    <div class="container d-flex align-items-center justify-content-center min-vh-100 background-login" style="margin-top: -80px;">
        <div class="" style="width: 400px;">
            <h2 class="text-center mb-5">SE CONNECTER</h2>
            <form onsubmit="return validateLogin(event)">
                <div class="form-group mb-4">
                    <input type="text" class="form-control custom-input" style="width: 450px" id="username" placeholder="Identifiant" required>
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control custom-input" style="width: 450px" id="password" placeholder="Mot de passe" required>
                </div>
                <div class="text-right">
                    <a href="#" class="text-muted">Mot de passe oubli√© ?</a>
                </div>
                <div id="error-message" class="alert alert-danger mt-3" style="display: none;">Identifiant ou mot de passe incorrect.</div>
                <button type="submit" class="button-black mt-5" style="width: 450px;height: 48px;">CONNEXION</button>
            </form>
        </div>
    </div>
</div>

{% include 'footer/footer.html.twig' %}

<script>
    function validateLogin(event) {
        event.preventDefault(); 

        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        
        if (username === 'demouser' && password === 'toto') {
            window.location.href = '{{ path('app_dashboard') }}';
        } else {
            const errorMessage = document.getElementById('error-message');
            errorMessage.style.display = 'block';
        }
    }
</script>